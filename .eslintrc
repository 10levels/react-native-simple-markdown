{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "plugin:flowtype/recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "flowtype",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "function-paren-newline": 0,
    "no-console": 0,
    "no-nested-ternary": 0,
    "no-underscore-dangle": 0,
    "react/sort-comp": 0,
    "semi": [2, "never"]
  }
}

